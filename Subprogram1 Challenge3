
def menu():
    print("1-Player")
    print("2-Player")
    print("Online")
    print("Exit")

menu()

choice = int(input("Select an option (1,2,3 or 4)"))

if choice == 1:
    print("1-Player Selected")
elif choice == 2:
    print("2-Player Selected")
elif choice == 3:
    print("Online Selected")
elif choice == 4:
    print("exiting...")
else:
    print("Invalid choice")
